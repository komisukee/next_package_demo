{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "dist",
      "declaration": true,
      "declarationMap": true,
      "sourceMap": true,
      "noEmit": false,
      "emitDeclarationOnly": false,
      "moduleResolution": "node",
      "module": "esnext",
      "target": "es5"
    },
    "include": ["index.ts", "app/components/**/*"],
    "exclude": ["app/**/*.test.ts", "app/**/*.test.tsx"]
}
